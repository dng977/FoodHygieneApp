<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:fadingEdge="horizontal"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/ratingText"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@color/favFrag"
        android:text="R"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resultNameText"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfoText"
        android:layout_toEndOf="@+id/ratingText"
        android:text="Name, Info"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/resultAddressText"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultNameText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfoText"
        android:layout_toEndOf="@+id/ratingText"
        android:text="Address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/moreInfoText"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addToFav"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/addToFav"
        android:text="moreInfo"
        android:textSize="10sp" />

    <Button
        android:id="@+id/addToFav"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfoButton"
        android:background="@android:drawable/btn_star_big_off" />

    <Button
        android:id="@+id/moreInfoButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text=">"
        android:onClick="onClick"
        android:textAlignment="center" />

</RelativeLayout>