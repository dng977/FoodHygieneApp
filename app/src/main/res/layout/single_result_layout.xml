<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:fadingEdge="horizontal"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/ratingText"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:background="@color/favFrag"
        android:text="R"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/resultNameText"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfoText"
        android:layout_toEndOf="@+id/ratingText"
        android:text="Name, Info"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/resultAddressText"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultNameText"
        android:layout_alignStart="@+id/resultNameText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/moreInfoText"
        android:text="Address"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/moreInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/labelNext"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/labelNext"
        android:text="moreInfo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/labelNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ratingText"
        android:layout_alignBottom="@+id/ratingText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:text=">"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="normal" />

</RelativeLayout>